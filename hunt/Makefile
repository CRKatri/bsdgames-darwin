SUBDIR=	hunt huntd
TOPTARGETS= all clean install
GAME_PARAM=	-DRANDOM -DREFLECT -DMONITOR -DOOZE -DFLY -DVOLCANO -DBOOTS \
		-DOTTO

$(TOPTARGETS): $(SUBDIR)

$(SUBDIR): 
	+EXTRADEFS="$(GAME_PARAM) -DINTERNET -DLOG" $(MAKE) -C $@ $(MAKECMDGOALS)

.PHONY: $(TOPTARGETS) $(SUBDIR)
